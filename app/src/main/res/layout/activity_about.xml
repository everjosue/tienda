<!-- activity_about.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Foto del programador -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="Foto del programador" />

    <!-- Descripción del programador -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProfile"
        android:layout_centerHorizontal="true"
        android:text="Soy un aficionado de la programación, estudiante de ingenieria en sistemas de la información."
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="16dp"
        tools:ignore="HardcodedText" />

    <!-- Campo para el nombre del programador -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_alignParentStart="true"
        android:text="Ever"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Campo para el contacto del programador -->
    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_alignParentStart="true"
        android:text="Email: Everjosue.oc@gmail.com"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Campo para el email del programador -->
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewContact"
        android:layout_alignParentStart="true"
        android:text="Gracias por utilizar mi aplicación :)"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Botón de Regresar -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_below="@id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>
